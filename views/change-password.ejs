<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <meta name="theme-color" content="#0c1020" />
  <title>Change Password - FC26 Tracker</title>
  <link rel="stylesheet" href="/style.css?v=3" />
</head>
<body class="auth-page">
  <main class="auth-card">
    <h1>Update Password</h1>
    <h2>First login security check</h2>
    <% if (error) { %><p class="error"><%= error %></p><% } %>
    <% if (success) { %><p><%= success %></p><% } %>
    <form method="post" action="/change-password">
      <input name="currentPassword" type="password" placeholder="Current password" required />
      <input name="newPassword" type="password" placeholder="New password" required />
      <input name="confirmPassword" type="password" placeholder="Confirm new password" required />
      <button type="submit">Save password</button>
    </form>
  </main>
</body>
</html>

<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1" />
  <meta name="theme-color" content="#0c1020" />
  <title>Dashboard - FC26 Tracker</title>
  <link rel="stylesheet" href="/style.css?v=15" />
</head>
<body>
  <header class="topbar">
    <img src="/img/login-logo.png" alt="FC26" class="top-logo" />
    <div>
      <span>Hi <%= user.username %> <% if (user.role === 'admin') { %>(admin)<% } %></span>
      <% if (user.role === 'admin') { %>
        <a class="btn" href="/admin/users">Manage users</a>
      <% } %>
      <form method="post" action="/logout" class="inline">
        <button type="submit">Logout</button>
      </form>
    </div>
  </header>

  <% if (currentChampion) { %>
    <section class="card champion">
      <h2>Current Champion</h2>
      <p>
        <strong><%= currentChampion.champion_name %></strong> â€” <%= currentChampion.tournament_name %>
        <% if (currentChampion.team) { %>
          <img src="<%= currentChampion.team.logo %>" alt="logo" class="logo" />
          <%= currentChampion.team.name %>
        <% } %>
      </p>
    </section>
  <% } %>

  <section class="card tournaments-card">
    <a class="btn" href="/tournaments/new">+ Create tournament</a>
    <h2>Your tournaments</h2>
    <% if (!tournaments.length) { %>
      <p>No tournaments yet.</p>
    <% } %>

    <div class="tournament-list">
      <% tournaments.forEach(t => {
        const created = new Date(t.created_at);
        const createdLabel = Number.isNaN(created.getTime())
          ? t.created_at
          : created.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
      %>
        <a class="tournament-item" href="/tournaments/<%= t.id %>">
          <div class="tournament-main">
            <div class="tournament-title"><%= t.name %></div>
            <div class="tournament-meta">
              <span class="status-pill-mini status-<%= t.status %>"><%= t.status %></span>
              <span class="tournament-date">ğŸ“… <%= createdLabel %></span>
            </div>
          </div>
          <% if (t.champion_name) { %>
            <div class="tournament-champion">ğŸ† Champion: <strong><%= t.champion_name %></strong></div>
          <% } %>
        </a>
      <% }) %>
    </div>
  </section>
</body>
</html>
